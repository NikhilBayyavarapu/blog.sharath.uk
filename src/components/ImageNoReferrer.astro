---
import { cn } from '@/cn';
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'eager' | 'lazy';
}

const props = Astro.props;
---

<Image
  referrerpolicy="no-referrer"
  class={cn('w-full rounded-xl', props.className)}
  width={800}
  height={500}
  {...props}
/>
