---
import { Image } from 'astro:assets';

import HeaderLink from '@/components/HeaderLink.astro';

import { env } from '@/conf';

import MaterialSymbolsRssFeedRoundedIcon from '~icons/material-symbols/rss-feed-rounded';
import MdiOpenInNewIcon from '~icons/mdi/open-in-new';
import SimpleIconsGithub from '~icons/simple-icons/github';
---

<header>
  <nav class="flex w-full items-center gap-4 border-b p-4">
    <div class="flex-1">
      <a class="flex w-10 items-center gap-4 hover:underline" href="/">
        <span class="sr-only">Go to this blog's homepage</span>
        <Image loading="eager" src="/icon.png" width={64} height={64} alt="blog.sharath.uk logo" />
        <span class="hidden text-2xl md:block">{env.SITE_TITLE}</span>
      </a>
    </div>
    <div class="flex gap-4">
      <HeaderLink
        class="flex flex-row items-center gap-2 text-xl hover:underline"
        href="https://sharath.uk"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span>sharath.uk</span>
        <MdiOpenInNewIcon width={16} height={16} />
      </HeaderLink>
    </div>
    <div>
      <a href="https://github.com/tnfssc/blog.sharath.uk" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Go to this blog's GitHub repo</span>
        <SimpleIconsGithub class="h-6 w-6" />
      </a>
    </div>
    <div>
      <a href="/rss.xml" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Subscribe to RSS</span>
        <MaterialSymbolsRssFeedRoundedIcon class="h-6 w-6" />
      </a>
    </div>
  </nav>
</header>
