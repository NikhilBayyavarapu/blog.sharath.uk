---
import HeaderLink from '@/components/HeaderLink.astro';
import { Image } from 'astro:assets';

import { Github } from 'simple-icons-astro';
---

<header>
  <nav class="flex">
    <a href="https://sharath.uk" target="_blank" rel="noopener noreferrer">
      <Image src="/icon.png" width={48} height={48} alt="blog.sharath.uk logo" />
    </a>
    <div>
      <HeaderLink href="/">Blog</HeaderLink>
      <HeaderLink href="https://sharath.uk" target="_blank" rel="noopener noreferrer">About</HeaderLink>
    </div>
    <div>
      <a href="https://github.com/tnfssc/blog.sharath.uk" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Go to this blog's GitHub repo</span>
        <Github width={32} height={32} />
      </a>
    </div>
  </nav>
</header>
