---
interface Props {
  date: Date;
  id?: string;
}

const { date, id } = Astro.props;
---

<time {id} datetime={date.toISOString()} transition:name={`${date.toISOString()}-date` + id ?? ''}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
